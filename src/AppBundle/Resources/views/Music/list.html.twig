{% extends 'base.html.twig' %}


{% block body %}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="{{ asset('css/music-list.css') }}">




<div class="container">
	<div class="row">

  {% for music in listMusic %}
  
		<div class="col-sm-3">
		    
        <!--Card-->
        <div class="card">

            <!--Card image-->
            <img class="zoom-out" style="height:253px" src="http://soundbuzz.fr/uploads/images_sons/{{ music.getPhoto.getUrl }}" alt="Card image cap">

            <!--Card content-->
            <div class="card-body">
                <!--Title-->
                <h4 class="card-title"><b>{{ music.titre }}</b></h4>
                <!--Text-->
                <p class="card-text"><i>Ajouté par <a href="{{ path('profile_others', {'id': music.getUser.getId } ) }}">{{ music.getUser.username }}</a> </i></p>
                <a href="{{ path('music_play', {'id': music.id } ) }}" class="btn btn-primary">Jouer</a> 
                <a href="{{ path('playlist_choix', {'id_music': music.id } ) }}" class="btn btn-primary">Ajouter à une playlist</a>
            </div>
          </div>
        
<!--/.Card-->
			</div>

      {% endfor %}

	</div>
</div>

{% endblock %}
