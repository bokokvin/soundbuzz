{% extends 'base.html.twig' %}


{% block body %}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">


<h1> Les titres des morceaux de l'utilisateur {{ app.user.username }} </h1>

<ul>
  {% for music in listMusic %}

    <li> 
      <a href="{{ path('music_play', {'id': music.id } ) }}">{{ music.titre }}</a>
      <a href="{{ path('music_delete', {'id': music.id } ) }}">Supprimer ce morceau</a>
      <a href="{{ path('playlist_choix', {'id_music': music.id } ) }}">Ajouter à une playlist</a>
      <b> {{ music.genre }} {{ music.artiste }}</b> 
    </li>

  {% endfor %}
</ul>

<div class="container">
	<div class="row">

  {% for music in listMusic %}
  
		<div class="col-sm-2">
		    
        <!--Card-->
        <div class="card">

            <!--Card image-->
            <img class="img-responsive" style="height:100px" src="http://soundbuzz.fr/uploads/images_sons/{{ music.getPhoto.getUrl }}" alt="Card image cap">

            <!--Card content-->
            <div class="card-body">
                <!--Title-->
                <h4 class="card-title">{{ music.titre }}</h4>
                <!--Text-->
                <p class="card-text">{{ music.genre }}</p>
                <p class="card-text">{{ music.artiste }}</p>
                <p class="card-text">Ajouté par <a href="{{ path('profile_others', {'id': music.getUser.getId } ) }}">{{ music.getUser.username }}</a></p>
                <a href="{{ path('music_play', {'id': music.id } ) }}" class="btn btn-primary">Jouer</a> 
                <a href="{{ path('playlist_choix', {'id_music': music.id } ) }}" class="btn btn-primary">Ajouter à une plaulist</a>
            </div>
          </div>
        
<!--/.Card-->
			</div>

      {% endfor %}

	</div>
</div>

{% endblock %}
