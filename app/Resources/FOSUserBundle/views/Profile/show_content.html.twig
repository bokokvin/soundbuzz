<h1>Profile</h1>

{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>


Musiques
<ul>
  {% for m in music %}

    <li> 
        {{ m.titre }}
      <a href="{{ path('music_delete', {'id': m.id } ) }}">Supprimer ce morceau</a>
      <a href="{{ path('playlist_choix', {'id_music': m.id } ) }}">Ajouter Ã  une playlist</a>
      <a href="{{ path('music_play', {'id': m.id } ) }}">Jouer</a>
    </li>

  {% endfor %}
</ul>

Playlists
<ul>
  {% for p in playlist %}

    <li> 
      <a href="{{ path('playlist_view', {'id': p.id } ) }}">{{ p.nom }}</a>
      <a href="{{ path('playlist_delete', {'id': p.id } ) }}">Supprimer cette playlist</a>
      <a href="{{ path('playlist_play', {'id': p.id } ) }}">Jouer cette playlist</a>

    </li>

  {% endfor %}
</ul>

</div>

